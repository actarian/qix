{
  "targets": {
    "browser": {
      "compile": [
        {
          "input": "src/css/main.scss",
          "output": "docs/css/main.css",
          "minify": false
        },
        {
          "input": "src/js/main.js",
          "output": {
            "file": "docs/js/main.js",
            "format": "umd"
          },
          "globals": {
            "gsap": "gsap"
          }
        }
      ],
      "bundle": [
        {
          "input": [
            "node_modules/gsap/dist/EasePack.js",
            "node_modules/gsap/dist/gsap.js"
          ],
          "output": "docs/js/vendors.js",
          "minify": true
        }
      ]
    }
  },
  "tfs": false,
  "server": {
    "root": "./docs",
    "path": "/qix/",
    "host": "0.0.0.0",
    "port": 40099,
    "log": false
  }
}
